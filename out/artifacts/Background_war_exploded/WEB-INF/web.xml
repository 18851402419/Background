<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <display-name>WebAPI</display-name>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
    <!--身份验证servlet-->
    <servlet>
        <servlet-name>IDRecognizeServlet</servlet-name>
        <servlet-class>myServlet.IDRecognizeServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>IDRecognizeServlet</servlet-name>
        <url-pattern>/IDRecognize</url-pattern>
    </servlet-mapping>
    <!--获取用户信息servlet-->
    <servlet>
        <servlet-name>GetInfoServlet</servlet-name>
        <servlet-class>myServlet.GetInfoServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>GetInfoServlet</servlet-name>
        <url-pattern>/GetInfo</url-pattern>
    </servlet-mapping>
    <!--获取某课程下的训练servlet-->
    <servlet>
        <servlet-name>GetTaskServlet</servlet-name>
        <servlet-class>myServlet.forStudent.GetTaskServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>GetTaskServlet</servlet-name>
        <url-pattern>/GetTask</url-pattern>
    </servlet-mapping>
    <!--获取当前课程下某一训练的题目servlet-->
    <servlet>
        <servlet-name>GetConcreteTopicServlet</servlet-name>
        <servlet-class>myServlet.forStudent.GetConcreteTopicServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>GetConcreteTopicServlet</servlet-name>
        <url-pattern>/GetConcreteTopic</url-pattern>
    </servlet-mapping>
    <!--上传学生答题情况servlet-->
    <servlet>
        <servlet-name>UploadAnswerServlet</servlet-name>
        <servlet-class>myServlet.forStudent.UploadAnswerServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UploadAnswerServlet</servlet-name>
        <url-pattern>/UploadAnswer</url-pattern>
    </servlet-mapping>
    <!--根据课程id查找课程servlet-->
    <servlet>
        <servlet-name>SearchClassIdServlet</servlet-name>
        <servlet-class>myServlet.forStudent.SearchClassIdServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SearchClassIdServlet</servlet-name>
        <url-pattern>/SearchClassId</url-pattern>
    </servlet-mapping>
    <!--学生新增课程servlet-->
    <servlet>
        <servlet-name>StuAddClassServlet</servlet-name>
        <servlet-class>myServlet.forStudent.StuAddClassServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>StuAddClassServlet</servlet-name>
        <url-pattern>/StuAddClass</url-pattern>
    </servlet-mapping>
    <!--学生签到servlet-->
    <servlet>
        <servlet-name>StuCheckInServlet</servlet-name>
        <servlet-class>myServlet.forStudent.StuCheckInServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>StuCheckInServlet</servlet-name>
        <url-pattern>/StuCheckIn</url-pattern>
    </servlet-mapping>
</web-app>